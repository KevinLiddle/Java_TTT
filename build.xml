<project default="all">
  <property name="source-directory" location="." />

  <path id="CLASSPATH">
    <pathelement location="/Users/unclebob/Projects/junit-dep-4.9b3.jar" />
    <pathelement location="${source-directory}" />
  </path>

  <target name="compile">
    <javac srcdir="${source-directory}"
           includeantruntime="false" >
      <classpath refid="CLASSPATH"/>
    </javac>
  </target>

  <target name="clean-up">
    <delete>
      <fileset dir="${source-directory}" includes="**/*.class" />
    </delete>
  </target>

  <target name="test" depends="compile">
    <junit>
      <classpath refid="CLASSPATH" />
      <formatter type="brief" usefile="false" />
      <test name="BoardTest" />
      <test name="HumanPlayerTest" />
      <test name="GameStateTest" />
      <test name="MovesTest" />
      <test name="DrawBoardTest" />
    </junit>
  </target>

  <target name="all" depends="test" />
  <target name="clean" depends="clean-up" />
</project>
